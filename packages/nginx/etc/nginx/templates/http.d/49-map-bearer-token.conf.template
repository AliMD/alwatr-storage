map $http_authorization $bearer_token {
  ~*^Bearer\s+(?<token>\S+)$ $token;
  default '';
}

# also for user id with header User-Id
map $http_user_id $user_id {
  ~*^Id\s+(?<id>\S+)$ $id;
  default '';
}

# also for device id with header Device-Id
map $http_device_id $device_id {
  ~*^Id\s+(?<id>\S+)$ $id;
  default '';
}

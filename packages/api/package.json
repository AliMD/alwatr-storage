{
  "name": "@alwatr/storage-api",
  "version": "4.1.0",
  "description": "Extremely fast and compact JSON-based database that operates in memory, includes a JSON file backup, and serve over the highly accelerated Nginx.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "type": "module",
  "keywords": [
    "database",
    "storage",
    "json",
    "nosql",
    "no-sql",
    "api",
    "data",
    "data-storage",
    "file",
    "microservice",
    "nanoservice",
    "typescript",
    "alwatr"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/store",
    "directory": "packages/api"
  },
  "homepage": "https://github.com/Alwatr/store#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/store/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "nano-build-development": {
    "sourcemap": true,
    "sourcesContent": true
  },
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "cw": "yarn run clean && yarn run watch",
    "d": "yarn run build:es && ALWATR_DEBUG=1 yarn node",
    "start": "yarn build && yarn serve",
    "build": "yarn lint:ts & yarn build:es",
    "build:es": "nano-build --preset=microservice",
    "lint:ts": "tsc --build",
    "watch": "yarn run build:es --watch",
    "clean": "rm -rfv dist *.tsbuildinfo",
    "serve": "yarn node --enable-source-maps dist/main.mjs",
    "serve:debug": "yarn node --inspect --enable-source-maps dist/main.mjs"
  },
  "devDependencies": {
    "@alwatr/logger": "^2.4.1",
    "@alwatr/nano-build": "^1.2.1",
    "@alwatr/nano-server": "^1.2.7",
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/storage-engine": "workspace:^",
    "@alwatr/tsconfig-base": "^1.0.5",
    "@alwatr/type": "^1.2.4",
    "@alwatr/util": "^1.4.1",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  }
}

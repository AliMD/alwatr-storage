{
  "name": "@alwatr/nitrobase-engine",
  "version": "7.1.1",
  "description": "Extremely fast and compact JSON-based database that operates in memory, includes a JSON file backup, and serve over the highly accelerated Nginx.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "keywords": [
    "database",
    "storage",
    "json",
    "nosql",
    "no-sql",
    "data",
    "data-storage",
    "file",
    "typescript",
    "esm",
    "alwatr"
  ],
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "license": "MIT",
  "files": [
    "**/*.{js,mjs,cjs,map,d.ts,html,md}",
    "!demo/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/nitrobase",
    "directory": "packages/engine"
  },
  "homepage": "https://github.com/Alwatr/nitrobase/tree/next/packages/engine#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/nitrobase/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "scripts": {
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "d": "yarn node --enable-source-maps --trace-warnings",
    "build": "yarn run build:ts & yarn run build:es",
    "build:es": "nano-build --preset=module",
    "build:ts": "tsc --build",
    "watch": "yarn run watch:ts & yarn run watch:es",
    "watch:es": "yarn run build:es --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv dist *.tsbuildinfo"
  },
  "dependencies": {
    "@alwatr/exit-hook": "^1.0.16",
    "@alwatr/flat-string": "^1.0.23",
    "@alwatr/logger": "^3.2.14",
    "@alwatr/nitrobase-helper": "workspace:^",
    "@alwatr/nitrobase-reference": "workspace:^",
    "@alwatr/nitrobase-types": "workspace:^",
    "@alwatr/node-fs": "^1.0.13",
    "@alwatr/wait": "^1.1.16"
  },
  "devDependencies": {
    "@alwatr/nano-build": "^1.3.10",
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/tsconfig-base": "^1.2.0",
    "@alwatr/type-helper": "^1.2.6",
    "@types/node": "^22.6.1",
    "typescript": "^5.6.2"
  }
}

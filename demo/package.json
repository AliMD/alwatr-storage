    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/tsconfig-base": "^1.0.5",
    "@alwatr/type": "^1.2.4",
    "@types/node": "^20.10.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
